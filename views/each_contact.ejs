<html>
<head>

		<!-- Website Title & Description for Search Engine purposes -->
		<title><%=rows[0].First_Name+' '+rows[0].Last_Name%></title>
		<meta name="description" content="">

		<!-- Mobile viewport optimized -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<!-- Bootstrap CSS -->
		<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="includes/css/bootstrap-glyphicons.css" rel="stylesheet">

		<!-- Custom CSS -->
		<link href="includes/css/styles.css" rel="stylesheet">

		<!-- Include Modernizr in the head, before any other Javascript -->
		<script src="includes/js/modernizr-2.6.2.min.js"></script>
		<script src="http://code.jquery.com/jquery.js"></script>

		<!--<script type="text/javascript" src="includes/js/modal_script.js"></script>-->
		<script src="http://code.jquery.com/jquery.js"></script>
		<!-- First try for the online version of jQuery-->
	<script src="http://code.jquery.com/jquery.js"></script>

	<!-- If no online access, fallback to our hardcoded version of jQuery -->
	<script>window.jQuery || document.write('<script src="includes/js/jquery-2.2.3.min.js"><\/script>')</script>

	<!-- Bootstrap JS -->
	<script src="bootstrap/js/bootstrap.min.js"></script>
	<script src="fillingForm.js"></script>

	</head>


	<body>
	<table id="table">
	<tr>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Phone Number</th>
	</tr>

	<% for(let i = 0; i < rows.length;i++) { %>
	<tr>
	<td><%=rows[i].First_Name%></td>
	<td><%=rows[i].Last_Name%></td>
	<td><%=rows[i].Phone_No%></td>
	<td><a href="#myModal" role="button" class="btn btn-warning" onclick="return fillInHidden(this)" data-toggle="modal"><span class="glyphicon glyphicon-hand-up"></span> Click to send OTP</a>
										<div class="modal fade" id="myModal">
											<div class="modal-dialog">
												<div class="modal-content">
													<div class="modal-header">
														<button class="close " data-dismiss="modal">&times;</button>
 													<h2 class="modal-title">Send OTP </h2>
													</div><!--end modal header -->
													
															
															
															<form action="/messaging" method="post" class="form-horizontal" id="Form">
																
																		<div class="form-group">
																	
																	<div class="col-lg-10">
																		<input class="form-control" id="first" name="First" type="hidden" >
																	</div>
																</div>
																<div class="form-group">
																	
																	<div class="col-lg-10">
																		<input class="form-control" id="last" name="Last" type="hidden" >
																	</div>
																</div>
																<div class="form-group">
																	
																	<div class="col-lg-10">
																		<input class="form-control" id="Phone" name="Phone" type="hidden" >
																	</div>
																</div>
																		<div class="form-group">
																			<label class="col-lg-2 control-label" for="message">Message</label>
																			<div class="col-lg-10">
		<textarea class="form-control" id="message" name="message" rows="3">Hi. Your OTP is: <%=Math.floor(Math.random()*900000) + 100000%>
																				</textarea>

																			<button class="btn btn-success pull-right"	type="submit">Send</button>
																		  </div>
																   </div><!-- end form group -->
															</form>

													</div><!-- end modalbody -->
													<div class="modal-footer">
														<button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
														
													</div><!-- end modal footer-->
												</div><!--end modal content -->
											</div><!--end dialog -->
										</div><!-- end myModal --></td>
	</tr>
							  
							  <% } %>
							</table>
	

<!-- First try for the online version of jQuery-->
	<script src="http://code.jquery.com/jquery.js"></script>

	<!-- If no online access, fallback to our hardcoded version of jQuery -->
	<script>window.jQuery || document.write('<script src="includes/js/jquery-2.2.3.min.js"><\/script>')</script>

	<!-- Bootstrap JS -->
	<script src="bootstrap/js/bootstrap.min.js"></script>

	</body>
	</html>